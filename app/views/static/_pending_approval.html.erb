<% pending_approvals.each do |pending_approval| %>
  <div class='homepage-block col-md-3'>
    <h4>
      <%= pending_approval.user.full_name %>
    </h4> 

    <p>
     <span class='pending_details'>Date Submitted:</span> <%= pending_approval.user.full_name %>
    </p>

    <p>
     <span class='pending_details'>Rationale Submitted:</span> <%= truncate pending_approval.rationale,length: 42 %>
    </p>

    <div class='row'>
      <div class='col-md-6 colum'>
        <%= link_to 'Approve', root_path, class: 'btn btn-success btn-block' %>      
      </div> 
      <div class='col-md-6 colum'>
        <%= link_to 'Review', root_path, class: 'btn btn-warning btn btn-block' %>
      </div>   
    </div>
  </div>
<% end %>
